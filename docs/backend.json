{
  "entities": {
    "WasteApplication": {
      "title": "WasteApplication",
      "type": "object",
      "description": "Represents a waste application submitted by a user.",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the WasteApplication."
        },
        "userId": {
          "type": "string",
          "description": "The ID of the user who submitted the application."
        },
        "userEmail": {
          "type": "string",
          "description": "The email of the user who submitted the application.",
          "format": "email"
        },
        "departmentId": {
          "type": "string",
          "description": "The department submitting the application."
        },
        "submissionDate": {
          "type": "string",
          "format": "date-time",
          "description": "The date and time the application was submitted."
        },
        "wasteType": {
          "type": "string",
          "description": "The type of waste."
        },
        "quantity": {
          "type": "number",
          "description": "The quantity of waste in kg."
        },
        "locationLongitude": {
          "type": "number",
          "description": "Longitude of the waste location."
        },
        "locationLatitude": {
          "type": "number",
          "description": "Latitude of the waste location."
        },
        "photoUrl": {
          "type": "string",
          "description": "URL of the uploaded photo of the waste."
        },
        "address": {
          "type": "string",
          "description": "Address of the waste location."
        },
        "status": {
          "type": "string",
          "description": "The status of the waste application.",
          "enum": [
            "submitted",
            "approved",
            "rejected"
          ]
        },
        "notes": {
          "type": "string",
          "description": "Additional notes for the application."
        }
      },
      "required": [
        "userId",
        "departmentId",
        "submissionDate",
        "wasteType",
        "quantity",
        "address",
        "status"
      ]
    },
    "User": {
      "title": "User",
      "type": "object",
      "description": "Represents a user in the system.",
      "properties": {
        "uid": {
          "type": "string",
          "description": "The user's unique ID from Firebase Auth."
        },
        "email": {
          "type": "string",
          "format": "email",
          "description": "The user's email address."
        },
        "role": {
          "type": "string",
          "description": "The user's role.",
          "enum": [
            "user",
            "admin"
          ]
        }
      },
      "required": [
        "uid",
        "email",
        "role"
      ]
    }
  },
  "auth": {
    "providers": [
      "password"
    ]
  },
  "firestore": {
    "/wasteApplications/{applicationId}": {
      "schema": {
        "$ref": "#/entities/WasteApplication"
      },
      "description": "Stores all waste applications submitted by users."
    },
    "/users/{userId}": {
        "schema": {
            "$ref": "#/entities/User"
        },
        "description": "Stores user profile information."
    }
  }
}
